@model TodoListShared.Todo;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@using (Html.BeginForm())
{
    <input type="hidden" asp-for="Id" />
    <div class="form-group row">
        <label for="created" class="col-sm-2 col-form-label">Created</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="created" />
        </div>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Title</label>
        <input type="title" class="form-control" id="title" asp-for="Title">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">DueDate</label>
        <input type="text" class="form-control" id="date" value="@DateTime.Now.Day/@DateTime.Now.Month/@DateTime.Now.Year" asp-for="DueDate">
    </div>

    <input type="checkbox" name="Done" asp-for="IsDone" /> <br />


    <button type="button" class="btn-primary">Save</button>
    <a href="/index" type="btn btn-secondary" role="button">Cancel</a>
}

