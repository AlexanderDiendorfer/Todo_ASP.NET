@model IEnumerable<TodoListShared.Todo>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{

}

<div class="container-fluid">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Until</th>
                <th scope="col">Title</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var todo in Model)
            {
                <tr @(todo.IsDone ? "class=bg-success" : (todo.DueDate < DateTime.Now ? "class=bg-danger" : ""))>
                    <td>@todo.DueDate</td>
                    <td>@todo.Title</td>
                    <td><a href="/Edit/@todo.Id" class="btn">Edit</a> | <a href="/Delete/@todo.Id" lcass="btn btn-primary">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
